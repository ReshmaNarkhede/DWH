<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/parentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="vertical"
        android:padding="@dimen/p5">

        <TextView
            android:id="@+id/reportTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/m10"
            android:background="@drawable/answer_border"
            android:onClick="reportClick"
            android:paddingStart="@dimen/p25"
            android:paddingTop="@dimen/p10"
            android:paddingEnd="@dimen/p25"
            android:paddingBottom="@dimen/p10"
            android:text="@string/report"
            android:textColor="@color/ans_text_color" />

        <ImageView
            android:layout_width="@dimen/h100"
            android:layout_height="@dimen/h100"
            android:layout_margin="@dimen/m10"
            android:background="@drawable/dwh_logo"
            android:visibility="visible" />

        <TextView
            android:id="@+id/thankYouText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/m10"
            android:padding="@dimen/p5"
            android:text="@string/is_symtom_assessment_was_helpful"
            android:textColor="@color/label_text_color"
            android:textSize="@dimen/t23" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="@dimen/m10"
            android:orientation="vertical"
            android:padding="@dimen/p7">

            <Button
                android:id="@+id/yesBtn"
                style="@style/CustomButtonTheme"
                android:layout_gravity="end"
                android:onClick="yesClick"
                android:text="@string/yes" />

            <Button
                android:id="@+id/noBtn"
                style="@style/CustomButtonTheme"
                android:layout_gravity="end"
                android:onClick="noClick"
                android:text="@string/no" />

            <Button
                android:id="@+id/notSureBtn"
                style="@style/CustomButtonTheme"
                android:layout_gravity="end"
                android:onClick="notSureClick"
                android:text="@string/i_am_not_sure"/>
        </LinearLayout>

        <include
            android:id="@+id/layout"
            layout="@layout/bottom_layout" />

    </LinearLayout>
</ScrollView>