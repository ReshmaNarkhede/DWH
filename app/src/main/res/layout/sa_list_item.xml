<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/m10"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tint="@color/black"
        android:src="@android:drawable/ic_input_add"
        android:layout_marginTop="@dimen/m10"/>

    <TextView
        android:id="@+id/dateTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/m30"
        android:layout_marginTop="@dimen/m10"
        android:layout_marginEnd="@dimen/m20"
        android:layout_marginBottom="@dimen/m10"
        android:padding="@dimen/p5"
        android:paddingStart="@dimen/p15"
        android:textColor="@color/black"
        android:paddingEnd="@dimen/p5"
        android:text="@string/label"
        android:textSize="@dimen/t18" />
    <View
        android:layout_width="2dp"
        android:layout_height="@dimen/h150"
        android:layout_below="@+id/img"
        android:background="@color/black"
        android:layout_marginStart="@dimen/m15"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dateTxt"
        android:layout_marginStart="@dimen/m40"
        android:layout_marginEnd="@dimen/m20"
        android:layout_marginBottom="@dimen/m20"
        android:background="@drawable/black_border"
        android:orientation="vertical"
        android:padding="@dimen/p10">

        <TextView
            android:id="@+id/symptomTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/m10"
            android:layout_marginTop="@dimen/m10"
            android:layout_marginEnd="@dimen/m10"
            android:padding="@dimen/p5"
            android:text="@string/label"
            android:textColor="@color/black"
            android:textSize="@dimen/t18" />

        <TextView
            android:id="@+id/userInfoTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/m10"
            android:layout_marginTop="@dimen/m10"
            android:textColor="@color/black"
            android:layout_marginEnd="@dimen/m10"
            android:padding="@dimen/p5"
            android:text="@string/label"
            android:textSize="@dimen/t18" />
    </LinearLayout>
</RelativeLayout>