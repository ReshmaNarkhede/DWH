<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout"
        android:fillViewport="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/parentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="vertical"
            android:padding="@dimen/p5">

            <TextView
                android:id="@+id/answerTxt"
                style="@style/AnswerButtonTheme"
                android:text="@string/label"
                android:visibility="visible" />

            <ImageView
                android:layout_width="@dimen/h120"
                android:layout_height="@dimen/h100"
                android:layout_margin="@dimen/m10"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:background="@drawable/dwh_logo_1"
                android:visibility="visible" />

            <TextView
                android:id="@+id/questionTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/m10"
                android:text="@string/label"
                android:textColor="@color/label_text_color"
                android:textSize="@dimen/t23" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/radioList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_margin="@dimen/m10"
                android:overScrollMode="never"
                tools:itemCount="5"
                tools:listitem="@layout/radio_item" />


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <include
        android:id="@+id/layout"
        layout="@layout/bottom_layout" />
</RelativeLayout>