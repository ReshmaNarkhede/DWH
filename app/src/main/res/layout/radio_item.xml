<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="end"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_selector"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:layout_marginStart="@dimen/m200"
        android:layout_marginTop="@dimen/m5"
        android:layout_marginBottom="@dimen/m5"
        android:layout_marginEnd="@dimen/m5"
        android:paddingStart="@dimen/p40"
        android:paddingTop="@dimen/p10"
        android:paddingEnd="@dimen/p40"
        android:textColor="@color/pink"
        android:paddingBottom="@dimen/p10"
        android:text="@string/label"
        android:textSize="@dimen/t16" />
</RelativeLayout>
