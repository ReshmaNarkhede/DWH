<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/parentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="vertical">

        <TextView
        android:id="@+id/symptomTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/m10"
        android:background="@drawable/answer_border"
        android:paddingStart="@dimen/p25"
        android:paddingTop="@dimen/p10"
        android:onClick="symptomClick"
        android:textColor="@color/ans_text_color"
        android:paddingEnd="@dimen/p25"
        android:paddingBottom="@dimen/p10"
        android:text="@string/label" />

        <ImageView
            android:layout_width="@dimen/h100"
            android:layout_height="@dimen/h100"
            android:layout_margin="@dimen/m10"
            android:background="@drawable/dwh_logo"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/timeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/p10"
            android:paddingBottom="@dimen/p10"
            android:visibility="visible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/m10"
                android:padding="@dimen/p5"
                android:textColor="@color/label_text_color"
                android:text="@string/when_did_it_start"
                android:textSize="@dimen/t23" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="end"
                android:padding="@dimen/p10">

                <Button
                    android:id="@+id/whenStartDate"
                    style="@style/CustomButtonTheme"
                    android:text="@string/date"
                    android:onClick="whenDateClick"
                    android:textColor="@color/pink" />

                <Button
                    android:id="@+id/whenStartTime"
                    style="@style/CustomButtonTheme"
                    android:onClick="whenTimeClick"
                    android:text="@string/time" />
            </LinearLayout>

        </LinearLayout>

        <include
            android:id="@+id/layout"
            layout="@layout/bottom_layout" />

    </LinearLayout>
</ScrollView>