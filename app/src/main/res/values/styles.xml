<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="CustomButtonTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/btn_selector</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/t16</item>
        <item name="android:textColor">@color/pink</item>
        <item name="android:layout_marginTop">@dimen/m5</item>
        <item name="android:layout_marginBottom">@dimen/m5</item>
        <item name="android:layout_marginEnd">@dimen/m5</item>
        <item name="android:paddingStart">@dimen/p25</item>
        <item name="android:paddingEnd">@dimen/p25</item>
        <item name="android:paddingTop">@dimen/p9</item>
        <item name="android:paddingBottom">@dimen/p9</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>

    <style name="AnswerButtonTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/answer_border</item>
        <item name="android:textColor">@color/ans_text_color</item>
        <item name="android:layout_margin">@dimen/m10</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/t16</item>
        <item name="android:paddingStart">@dimen/p25</item>
        <item name="android:paddingEnd">@dimen/p25</item>
        <item name="android:paddingTop">@dimen/p9</item>
        <item name="android:paddingBottom">@dimen/p9</item>
    </style>

    <style name="EditTextTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@color/grey</item>
        <item name="colorControlActivated">@color/grey</item>
        <item name="colorControlHighlight">@color/grey</item>
        <item name="android:typeface">serif</item>
    </style>
    <style name="TextViewTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:typeface">serif</item>
        <item name="android:textColor">@color/label_text_color</item>
        <item name="android:textSize">@dimen/t20</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyRadioButton" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/grey</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/grey</item>
    </style>
</resources>
